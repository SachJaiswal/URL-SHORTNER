<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/chain.png">
    <title>QR Code Gallery</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
        
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: 'Inter', sans-serif;
            background: #0f0f1e;
            background-image: 
                radial-gradient(at 0% 0%, rgba(99, 102, 241, 0.3) 0px, transparent 50%),
                radial-gradient(at 100% 100%, rgba(16, 185, 129, 0.2) 0px, transparent 50%);
            min-height: 100vh;
            padding: 40px 20px;
            color: white;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
        }

        h1 { font-size: 32px; font-weight: 700; }
        
        .nav-btn {
            padding: 10px 20px;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: white;
            text-decoration: none;
            border-radius: 10px;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.2s;
        }

        .nav-btn:hover { background: rgba(255, 255, 255, 0.2); }

        .qr-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 24px;
            animation: fadeInUp 0.6s ease-out;
        }

        .qr-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 24px;
            border-radius: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            transition: transform 0.2s;
        }

        .qr-card:hover {
            transform: translateY(-4px);
            border-color: rgba(16, 185, 129, 0.4);
        }

        .url-info {
            margin-bottom: 20px;
            width: 100%;
        }

        .short-id {
            display: inline-block;
            padding: 4px 12px;
            background: rgba(16, 185, 129, 0.2);
            color: #6ee7b7;
            border-radius: 6px;
            font-size: 13px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .original-url {
            color: rgba(255, 255, 255, 0.6);
            font-size: 13px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 100%;
            display: block;
        }

        .generate-btn {
            background: #10b981;
            color: white;
            border: none;
            padding: 10px 24px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }

        .generate-btn:hover {
            background: #059669;
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        }

        .qr-image {
            width: 180px;
            height: 180px;
            border-radius: 12px;
            border: 4px solid white;
            display: none;
            margin-top: 10px;
            animation: popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes popIn {
            from { opacity: 0; transform: scale(0.8); }
            to { opacity: 1; transform: scale(1); }
        }

        .download-btn {
            display: none;
            margin-top: 16px;
            padding: 10px 24px;
            background: #6366f1;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.2s;
            animation: popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .download-btn:hover {
            background: #4f46e5;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>QR Code Gallery</h1>
            <a href="/" class="nav-btn">‚Üê Back to Home</a>
        </div>

        <div class="qr-grid">
            <% if (urls && urls.length > 0) { %>
                <% urls.forEach(url => { %>
                    <div class="qr-card">
                        <div class="url-info">
                            <span class="short-id"><%= url.short_id %></span>
                            <a href="<%= url.redirect_url %>" target="_blank" class="original-url" title="<%= url.redirect_url %>">
                                <%= url.redirect_url %>
                            </a>
                        </div>
                        <button class="generate-btn" onclick="generateQR('<%= url.short_id %>', this)">
                            Generate QR Code
                        </button>
                        <img class="qr-image" alt="QR Code">
                        <a href="#" class="download-btn" download="qrcode-<%= url.short_id %>.png">Download QR</a>
                    </div>
                <% }) %>
            <% } else { %>
                <p style="grid-column: 1/-1; text-align: center; color: rgba(255,255,255,0.5);">No URLs found. Go back home to create one!</p>
            <% } %>
        </div>
    </div>

    <script>
        async function generateQR(shortId, btn) {
            btn.textContent = "Generating...";
            const response = await fetch(`/url/qr/${shortId}`);
            const data = await response.json();
            
            if (data.qrCode) {
                const img = btn.nextElementSibling;
                img.src = data.qrCode;
                img.style.display = 'block';
                btn.style.display = 'none';
                
                const downloadBtn = img.nextElementSibling;
                downloadBtn.href = data.qrCode;
                downloadBtn.style.display = 'inline-block';
            }
        }
    </script>
</body>
</html>